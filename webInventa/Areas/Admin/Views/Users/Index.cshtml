


@model IEnumerable<InventaDataModul.Users>


@{
    ViewBag.Title = "Список пользователей";

}

<h2>Список пользователей</h2>



<table class="table">
    <tr>


        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.IdUser)
        </th>
        <th>@Html.DisplayNameFor(model => model.UserRoles)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>


        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Физическое_лицо.ФамилияИО)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRoles)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |            
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>

    </tr>
}

</table>

